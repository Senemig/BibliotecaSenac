@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h1 class="row justify-content-md-center">Cadastro de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" class="form-control" id="senha" required/>
            </div>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </form>

    <p class="text-warning" id="mensagemErro"></p>
</div>