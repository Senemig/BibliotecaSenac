<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Username</th>
                    <th>Senha</th>
                    <th></th>
                </tr>
            </thead>

            @if (Model.Count > 0)
            {
                <tbody>
                    @foreach (Usuario u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Nome</td>
                            <td>@u.Username</td>
                            <td>@u.Senha</td>
                            <td><a href="/Usuario/Edicao/@u.Id">Editar</a></td>
                        </tr>
                    }
                </tbody>
            }

            else
            {
                <p class="text-danger">Nenhum usuário encontrado!</p>
            }

        </table>
    </div>
</div>